{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2024",
        "moduleResolution": "node",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}